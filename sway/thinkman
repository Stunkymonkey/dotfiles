# outputs

output * {
	position 1920,0
}

set $laptop "eDP-1"
bindswitch lid:on output $laptop disable
bindswitch lid:off output $laptop enable
output $laptop {
	position 0,0
}

input "2:7:SynPS/2_Synaptics_TouchPad" {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	scroll_factor 0.5
}
