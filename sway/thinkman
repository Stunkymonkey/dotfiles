# outputs

output * {
	position 1600,0
}
output DP-1 {
  resolution 1920x1080
}

set $laptop "LVDS-1"
bindswitch lid:on output $laptop disable
bindswitch lid:off output $laptop enable
output $laptop {
	position 0,180
}

input "2:7:SynPS/2_Synaptics_TouchPad" {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	scroll_factor 0.5
}
